<div style="text-align: center; margin-top: 30px;">
    <input type="button" value="Oyun Alanına Git"
           @onclick="GoToCounter"
           style="padding: 12px 24px; font-size: 16px; margin: 10px; background-color: #6c63ff; color: white; border: none; border-radius: 12px; cursor: pointer; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: background-color 0.3s ease, transform 0.2s ease;" />

    <input type="button" value="Leaderboard'a Git"
           @onclick="GoToLeaderboard"
           style="padding: 12px 24px; font-size: 16px; margin: 10px; background-color: #6c63ff; color: white; border: none; border-radius: 12px; cursor: pointer; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: background-color 0.3s ease, transform 0.2s ease;" />
</div>

@code {
    private void GoToCounter()
    {
        Navigation.NavigateTo("/game");
    }
    private void GoToLeaderboard()
    {
        Navigation.NavigateTo("/leaderboard");
    }
}